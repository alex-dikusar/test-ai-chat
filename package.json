{
  "name": "test-chat-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": ["client", "api"],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "dev:api": "npm run start:dev --workspace=api",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev\"",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=client",
    "build:api": "npm run build --workspace=api",
    "lint": "npm run lint --workspaces --if-present",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f postgres",
    "prisma:generate": "npm run prisma:generate --workspace=api",
    "prisma:migrate": "npm run prisma:migrate --workspace=api",
    "prisma:studio": "npm run prisma:studio --workspace=api"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
